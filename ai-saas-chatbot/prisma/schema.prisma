generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullname  String
  clerkId   String
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  stripeId  String
}

model Billing {
  id        String  @id @default(uuid())
  plan      Plans []
  credits   Int
  userId    String @unique // Foreign key field
}

enum Plans {
  STANDARD
  PRO
  ULTIMATE
}